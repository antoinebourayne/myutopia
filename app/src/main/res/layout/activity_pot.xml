<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PotActivity"
    android:id="@+id/potBackground"
    android:scaleType="fitXY">

    <LinearLayout
        android:id="@+id/upperLayout"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="70dp">

        <ImageView
            android:id="@+id/userButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </ImageView>

        <ImageView
            android:id="@+id/viewTemperature"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="200dp">
        </ImageView>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/window"
        android:layout_below="@id/upperLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <ImageView
            android:id="@+id/upperLights"
            android:layout_width="500dp"
            android:layout_height="200dp">
        </ImageView>

        <RelativeLayout
            android:id="@+id/midContent"
            android:layout_below="@id/upperLights"
            android:layout_width="match_parent"
            android:layout_height="150dp">

        </RelativeLayout>

        <ImageView
            android:id="@+id/downPot"
            android:layout_below="@id/midContent"
            android:layout_width="900dp"
            android:layout_height="300dp">
        </ImageView>

    </RelativeLayout>



</RelativeLayout>